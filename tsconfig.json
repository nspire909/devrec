{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@devrec/*": [
        "libs/*"
      ],
      "@devrec/common": [
        "libs/common/src/index.ts"
      ],
      "@devrec/auth": [
        "libs/auth/src/index.ts"
      ],
      "@devrec/error": [
        "libs/error/src/index.ts"
      ],
      "@devrec/ng-timer": [
        "libs/ng-timer/src/index.ts"
      ]
    }
  }
}
